<body>
    <div class="container">
        <h1>üå§Ô∏è Weather Management System</h1>
        
        <div class="controls">
            <input type="text" class="search-box" id="searchBox" placeholder="üîç Search cities...">
            <button class="btn btn-primary" onclick="toggleAddForm()">+ Add City</button>
            <button class="btn btn-success" onclick="refreshWeather()">üîÑ Refresh All</button>
        </div>

        <div class="add-city-form" id="addCityForm">
            <h3 style="margin-bottom: 20px; color: #333;">Add New City</h3>
            <div class="form-group">
                <label for="cityName">City Name:</label>
                <input type="text" id="cityName" placeholder="Enter city name (e.g., New York, London)">
            </div>
            <div class="form-group">
                <label for="country">Country (optional):</label>
                <input type="text" id="country" placeholder="Enter country code (e.g., US, UK)">
            </div>
            <div style="display: flex; gap: 10px;">
                <button class="btn btn-primary" onclick="addCity()">Add City</button>
                <button class="btn" onclick="toggleAddForm()" style="background: #6c757d; color: white;">Cancel</button>
            </div>
        </div>

        <div id="messageContainer"></div>
        
        <div class="cities-grid" id="citiesGrid">
            <div class="loading">Loading weather data...</div>
        </div>
    </div>

    <script>
        // Sample data with some default cities
        let cities = [
            { id: 1, name: 'London', country: 'UK' },
            { id: 2, name: 'New York', country: 'US' },
            { id: 3, name: 'Tokyo', country: 'JP' },
            { id: 4, name: 'Paris', country: 'FR' }
        ];
        
        let weatherData = {};
        let filteredCities = [...cities];
        let nextId = 5;

        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            setupSearch();
            loadAllWeather();
        });

        // Setup search functionality
        function setupSearch() {
            const searchBox = document.getElementById('searchBox');
            searchBox.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();
                filteredCities = cities.filter(city => 
                    city.name.toLowerCase().includes(searchTerm) ||
                    city.country.toLowerCase().includes(searchTerm)
                );
                renderCities();
            });
        }

        // Toggle add city form
        function toggleAddForm() {
            const form = document.getElementById('addCityForm');
            form.classList.toggle('active');
            if (form.classList.contains('active')) {
                document.getElementById('cityName').focus();
            }
        }

        // Add new city
        function addCity() {
            const cityName = document.getElementById('cityName').value.trim();
            const country = document.getElementById('country').value.trim();
            
            if (!cityName) {
                showMessage('Please enter a city name', 'error');
                return;
            }

            // Check if city already exists
            const exists = cities.some(city => 
                city.name.toLowerCase() === cityName.toLowerCase() && 
                city.country.toLowerCase() === (country || '').toLowerCase()
            );

            if (exists) {
                showMessage('This city already exists in your list', 'error');
                return;
            }

            const newCity = {
                id: nextId++,
                name: cityName,
                country: country || ''
            };

            cities.push(newCity);
            filteredCities = [...cities];
            
            // Clear form
            document.getElementById('cityName').value = '';
            document.getElementById('country').value = '';
            toggleAddForm();
            
            showMessage(`${cityName} added successfully!`, 'success');
            
            // Load weather for the new city
            loadWeatherForCity(newCity).then(() => {
                renderCities();
            });
        }

        // Delete city
        function deleteCity(cityId) {
            if (confirm('Are you sure you want to delete this city?')) {
                cities = cities.filter(city => city.id !== cityId);
                filteredCities = cities.filter(city => 
                    document.getElementById('searchBox').value === '' ||
                    city.name.toLowerCase().includes(document.getElementById('searchBox').value.toLowerCase()) ||
                    city.country.toLowerCase().includes(document.getElementById('searchBox').value.toLowerCase())
                );
                delete weatherData[cityId];
                renderCities();
                showMessage('City deleted successfully!', 'success');
            }
        }

        // Toggle edit form
        function toggleEditForm(cityId) {
            const form = document.getElementById(`editForm-${cityId}`);
            form.classList.toggle('active');
        }

        // Update city
        function updateCity(cityId) {
            const nameInput = document.getElementById(`editName-${cityId}`);
            const countryInput = document.getElementById(`editCountry-${cityId}`);
            
            const newName = nameInput.value.trim();
            const newCountry = countryInput.value.trim();
            
            if (!newName) {
                showMessage('Please enter a city name', 'error');
                return;
            }

            const cityIndex = cities.findIndex(city => city.id === cityId);
            if (cityIndex !== -1) {
                cities[cityIndex].name = newName;
                cities[cityIndex].country = newCountry;
                
                filteredCities = [...cities];
                toggleEditForm(cityId);
                showMessage('City updated successfully!', 'success');
                
                // Reload weather for updated city
                loadWeatherForCity(cities[cityIndex]).then(() => {
                    renderCities();
                });
            }
        }

        // Load weather for all cities
        async function loadAllWeather() {
            const grid = document.getElementById('citiesGrid');
            grid.innerHTML = '<div class="loading">Loading weather data...</div>';
            
            for (const city of cities) {
                await loadWeatherForCity(city);
            }
            
            renderCities();
        }

        // Load weather for a specific city
        async function loadWeatherForCity(city) {
            try {
                // Simulated weather data (in a real app, you'd use a weather API)
                const weatherConditions = ['sunny', 'cloudy', 'rainy', 'partly-cloudy', 'stormy'];
                const icons = ['‚òÄÔ∏è', '‚òÅÔ∏è', 'üåßÔ∏è', '‚õÖ', '‚õàÔ∏è'];
                const descriptions = ['Sunny', 'Cloudy', 'Rainy', 'Partly Cloudy', 'Stormy'];
                
                const randomIndex = Math.floor(Math.random() * weatherConditions.length);
                const randomTemp = Math.floor(Math.random() * 30) + 5; // 5-35¬∞C
                const randomHumidity = Math.floor(Math.random() * 50) + 30; // 30-80%
                const randomWindSpeed = Math.floor(Math.random() * 20) + 5; // 5-25 km/h
                
                weatherData[city.id] = {
                    temperature: randomTemp,
                    condition: weatherConditions[randomIndex],
                    icon: icons[randomIndex],
                    description: descriptions[randomIndex],
                    humidity: randomHumidity,
                    windSpeed: randomWindSpeed,
                    feelsLike: randomTemp + Math.floor(Math.random() * 6) - 3,
                    pressure: 1000 + Math.floor(Math.random() * 50)
                };
                
                // Simulate API delay
                await new Promise(resolve => setTimeout(resolve, 100));
                
            } catch (error) {
                console.error(`Error loading weather for ${city.name}:`, error);
                weatherData[city.id] = {
                    error: 'Failed to load weather data'
                };
            }
        }

        // Refresh weather for all cities
        async function refreshWeather() {
            showMessage('Refreshing weather data...', 'success');
            await loadAllWeather();
            showMessage('Weather data refreshed!', 'success');
        }

        // Render cities grid
        function renderCities() {
            const grid = document.getElementById('citiesGrid');
            
            if (filteredCities.length === 0) {
                grid.innerHTML = `
                    <div class="no-results">
                        <h3>No cities found</h3>
                        <p>Try adjusting your search or add a new city.</p>
                    </div>
                `;
                return;
            }

            grid.innerHTML = filteredCities.map(city => {
                const weather = weatherData[city.id];
                
                if (!weather) {
                    return `
                        <div class="city-card">
                            <div class="city-header">
                                <h3 class="city-name">${city.name}${city.country ? `, ${city.country}` : ''}</h3>
                            </div>
                            <div class="loading">Loading weather...</div>
                        </div>
                    `;
                }

                if (weather.error) {
                    return `
                        <div class="city-card">
                            <div class="city-header">
                                <h3 class="city-name">${city.name}${city.country ? `, ${city.country}` : ''}</h3>
                            </div>
                            <div class="error">${weather.error}</div>
                            <div class="card-actions">
                                <button class="btn btn-danger btn-small" onclick="deleteCity(${city.id})">Delete</button>
                                <button class="btn btn-primary btn-small" onclick="toggleEditForm(${city.id})">Edit</button>
                            </div>
                            ${renderEditForm(city)}
                        </div>
                    `;
                }

                return `
                    <div class="city-card">
                        <div class="city-header">
                            <h3 class="city-name">${city.name}${city.country ? `, ${city.country}` : ''}</h3>
                        </div>
                        
                        <div style="text-align: center;">
                            <div class="weather-icon">${weather.icon}</div>
                            <div class="temperature">${weather.temperature}¬∞C</div>
                            <div style="font-size: 18px; color: #666; margin-bottom: 20px;">${weather.description}</div>
                        </div>

                        <div class="weather-details">
                            <div class="weather-item">
                                <span>üíß</span>
                                <span>Humidity: ${weather.humidity}%</span>
                            </div>
                            <div class="weather-item">
                                <span>üå™Ô∏è</span>
                                <span>Wind: ${weather.windSpeed} km/h</span>
                            </div>
                            <div class="weather-item">
                                <span>üå°Ô∏è</span>
                                <span>Feels like: ${weather.feelsLike}¬∞C</span>
                            </div>
                            <div class="weather-item">
                                <span>üìä</span>
                                <span>Pressure: ${weather.pressure} hPa</span>
                            </div>
                        </div>

                        <div class="card-actions">
                            <button class="btn btn-danger btn-small" onclick="deleteCity(${city.id})">Delete</button>
                            <button class="btn btn-primary btn-small" onclick="toggleEditForm(${city.id})">Edit</button>
                        </div>

                        ${renderEditForm(city)}
                    </div>
                `;
            }).join('');
        }

        // Render edit form for a city
        function renderEditForm(city) {
            return `
                <div class="edit-form" id="editForm-${city.id}">
                    <h4 style="margin-bottom: 15px; color: #333;">Edit City</h4>
                    <div class="form-group">
                        <label>City Name:</label>
                        <input type="text" id="editName-${city.id}" value="${city.name}">
                    </div>
                    <div class="form-group">
                        <label>Country:</label>
                        <input type="text" id="editCountry-${city.id}" value="${city.country}">
                    </div>
                    <div style="display: flex; gap: 10px; margin-top: 15px;">
                        <button class="btn btn-success btn-small" onclick="updateCity(${city.id})">Save</button>
                        <button class="btn btn-small" onclick="toggleEditForm(${city.id})" style="background: #6c757d; color: white;">Cancel</button>
                    </div>
                </div>
            `;
        }

        // Show messages to user
        function showMessage(message, type) {
            const container = document.getElementById('messageContainer');
            const messageDiv = document.createElement('div');
            messageDiv.className = type;
            messageDiv.textContent = message;
            
            container.innerHTML = '';
            container.appendChild(messageDiv);
            
            setTimeout(() => {
                messageDiv.remove();
            }, 3000);
        }
    </script>
</body>
</html>
